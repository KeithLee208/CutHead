<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Card 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp">
        <LinearLayout
            android:id="@+id/icon_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/quick_bg_color"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:onClick="onClickIconView">
            <ImageView
                android:padding="35dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/icon_quick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="快速预约"
                android:background="@color/quick_bt_color"
                android:textColor="#fff"
                android:textSize="15sp"
                android:gravity="center"
                />

        </LinearLayout>

        <!-- Card 2-->
        <LinearLayout
            android:id="@+id/icon_2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/normal_bg_color"
            android:onClick="onClickIconView">
            <ImageView
                android:padding="35dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/icon_normal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="普通预约"
                android:background="@color/normal_bt_color"
                android:textColor="#fff"
                android:textSize="15sp"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <!-- Card 3-->
    <LinearLayout
        android:id="@+id/icon_3"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onClickIconView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/user_bg_color"
            android:layout_marginRight="1dp">
            <ImageView
                android:padding="35dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/icon_user"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="用户信息"
                android:background="@color/user_bt_color"
                android:textColor="#fff"
                android:textSize="15sp"
                android:gravity="center"
                />

        </LinearLayout>
        <!-- Card 4-->
        <LinearLayout
            android:id="@+id/icon_4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/add_bg_color"
            android:onClick="onClickIconView">
            <ImageView
                android:padding="35dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/icon_add"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="扩展"
                android:background="@color/add_bt_color"
                android:textColor="#fff"
                android:textSize="15sp"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <View
        android:id="@+id/reveal_view"
        android:background="#E24444"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

</io.codetail.widget.RevealFrameLayout>