<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_height="96dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_baber_icon"
        android:src="@drawable/user_icon"

        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="姓名"
        android:id="@+id/tv_babaer_name"
        android:layout_marginLeft="17dp"
        android:layout_alignTop="@+id/iv_baber_icon"
        android:layout_toRightOf="@+id/iv_baber_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="距离"
        android:id="@+id/tv_distance"

        android:layout_alignTop="@+id/tv_babaer_name"
        android:layout_toRightOf="@+id/tv_babaer_name"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="地址:修正路1236号洗剪吹理发店"
        android:id="@+id/tv_baber_address"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_babaer_name"
        android:layout_alignStart="@+id/tv_babaer_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="电话:"
        android:id="@+id/phone"
        android:layout_below="@+id/iv_baber_icon"
        android:layout_alignLeft="@+id/tv_baber_address"
        android:layout_alignStart="@+id/tv_baber_address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="预约时段"
        android:id="@+id/tv_book_time"
        android:layout_alignTop="@+id/phone"
        android:layout_alignRight="@+id/tv_baber_address"
        android:layout_alignEnd="@+id/tv_baber_address"/>


</RelativeLayout>



