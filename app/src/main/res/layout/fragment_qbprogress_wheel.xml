<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.cuthead.app.NBProgressBarFragment"
                xmlns:flatui="http://schemas.android.com/apk/res-auto"
    >
    <com.cengalabs.flatui.views.FlatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        flatui:textAppearance="dark"
        android:textSize="32sp"
        android:text="快速匹配"
        android:layout_above="@+id/qb_progress_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"/>

    <com.cuthead.controller.ProgressWheel
        android:id="@+id/qb_progress_wheel"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        ProgressWheel:text="正在匹配理发师..."
        ProgressWheel:myColor="#222"
        ProgressWheel:textSize="14sp"
        ProgressWheel:rimColor="#330097D6"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barColor="#0097D6"
        ProgressWheel:barWidth="5dp"
        ProgressWheel:rimWidth="3dp" />
</RelativeLayout>